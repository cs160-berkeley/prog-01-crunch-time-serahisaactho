<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.berkeley.cs160.crunch_time.Main2Activity">

    <Spinner
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/Exercises"
        android:spinnerMode="dropdown"
        android:popupTheme="@android:color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/BurnedCal"
        android:layout_below="@+id/Input"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#ada9a9"
        android:textColorHighlight="#ffffff"
        android:text="YOU HAVE DONE IT NOW."
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Alt1"
        android:linksClickable="false"
        android:textAlignment="center"
        android:width="100dp"
        android:textColor="#ada9a9"
        android:textColorHighlight="#ffffff"
        android:layout_below="@+id/bttn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Alt2"
        android:width="100dp"
        android:textAlignment="center"
        android:textColor="#ada9a9"
        android:textColorHighlight="#ffffff"
        android:layout_below="@+id/Alt1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Alt3"
        android:width="100dp"
        android:textAlignment="center"
        android:textColorHighlight="#ffffff"
        android:textColor="#ada9a9"
        android:layout_below="@+id/Alt2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Input"
        android:backgroundTint="#a3a6a0a0"
        android:textColor="#ada9a9"
        android:phoneNumber="false"
        android:textAlignment="center"
        android:visibility="invisible"
        android:layout_below="@+id/Exercises"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Units"
        android:gravity="bottom"
        android:textSize="15dp"
        android:textColor="#a9a6a6"
        android:visibility="invisible"
        android:text="UNITS"
        android:layout_alignBottom="@+id/Input"
        android:layout_toEndOf="@+id/Input"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Equivalent Exercises"
        android:id="@+id/bttn"
        style="@drawable/mybutton"
        android:layout_below="@+id/BurnedCal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:onClick="display_equivalent"
        android:textColor="#171717" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/stretch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calorie Burning Calculator"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
